/* Направете скрипт с име tomp. Този скрипт трябва да създаде
всички файлове, чието име е изписано с пускането на скрипта от
командния ред в home директорията на юзера. */

cat > tomp.sh   // Създавам файла tomp.sh
#!/bin/bash
for i in $@     //Цикъл, който да вземе имената на всеки файл от командния ред
do
    touch $i    // Създавам файл с даденото име
done

ls -la tomp.sh    // Проверявам правата, които има моят файл

chmod u+x tomp.sh   // Давам права на user-a за execute

./tomp.sh test.txt helloWorld.txt pesho.txt //Рънвам програмата с имена на файлове

ls //Проверявам, дали са създадени
